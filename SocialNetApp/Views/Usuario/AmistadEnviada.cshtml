@model List<SocialNetApp.Models.TableViewModel.UserTableViewModel>

@{
    ViewBag.Title = "Solicitudes de Amistad Enviadas";
}

<h2>@ViewBag.Title</h2>


<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Fecha_Nacimiento</th>
            </tr>

            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Apellido</td>
                    <td>@oElemento.Correo</td>
                    <td>@oElemento.Fecha_Nacimiento</td>
                    <td>
                        <input onclick="jsDelete(@oElemento.Id);" type="button" value="Eliminar" class="btn btn-danger" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    function jsDelete(id) {
        if(confirm("Ests seguro de eliminar ?"))
        {
            url = "@Url.Content("~/Usuario/DeleteSolicAmistadEnviada")"+"/"+ id;

            $.post(url, function (data)  {

                if(data == "1") {
                    document.location.href = "@Url.Content("~/Usuario/AmistadEnviada/")"
                    alert("Solicitud de Amistad Eliminada")
                } else {
                    alert ("Ocurio un error :(")
                }
            }
            )
        }


    }
</script>
